    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.8",
    "openapi-types": "^12.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
